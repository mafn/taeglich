---
import { Picture } from "astro:assets";
import stillRunningImage from "../../assets/images/still-running.png";
import "@fontsource/press-start-2p";
---

<section class="still" aria-labelledby="still-title">
  <div class="still__card">
    <p class="still__kicker">2026-02-11</p>
    <h1 id="still-title">Still running</h1>

    <Picture
      src={stillRunningImage}
      alt="A cartoon stick figure runs exhausted on a winding park path, sweating heavily with tongue out, under a tired-looking sun and clouds, with a discarded water bottle nearby."
      widths={[320, 480, 640, 768]}
      sizes="(max-width: 640px) 92vw, (max-width: 1024px) 72vw, 560px"
      formats={["avif", "webp"]}
      loading="eager"
      decoding="async"
      class="still__image"
    />

    <p class="still__copy">The run did not end. It only switched days.</p>

    <a class="still__link" href="/d/2026-02-10">Back to yesterday's run</a>
  </div>
</section>

<style>
  .still {
    min-height: min(100vh, 100svh);
    display: grid;
    place-items: center;
    padding: clamp(1rem, 4vw, 2rem);
    background:
      radial-gradient(circle at 12% 14%, #fff8cc, transparent 26%),
      radial-gradient(circle at 88% 16%, #d2e8ff, transparent 20%),
      linear-gradient(180deg, #f4f0e5 0%, #ebe2cc 100%);
    font-family: "Press Start 2P", monospace;
    color: #1f2937;
  }

  .still__card {
    width: min(100%, 40rem);
    border: 4px solid #1f2937;
    border-radius: 1rem;
    background: #fffdfa;
    box-shadow: 0 18px 44px rgba(31, 41, 55, 0.18);
    padding: clamp(1rem, 3vw, 1.6rem);
    text-align: center;
    display: grid;
    gap: 0.9rem;
  }

  .still__kicker {
    margin: 0;
    font-size: 0.62rem;
    color: #6b7280;
    letter-spacing: 0.18em;
  }

  .still h1 {
    margin: 0;
    font-size: clamp(0.95rem, 2.8vw, 1.3rem);
    line-height: 1.5;
  }

  .still__image {
    width: 100%;
    height: auto;
    border: 3px solid #1f2937;
    border-radius: 0.8rem;
    background: #ededed;
  }

  .still__copy {
    margin: 0;
    font-size: 0.6rem;
    line-height: 1.8;
    color: #4b5563;
  }

  .still__link {
    justify-self: center;
    border: 3px solid #1f2937;
    border-radius: 999px;
    padding: 0.72rem 1.1rem;
    text-decoration: none;
    font-size: 0.58rem;
    color: #111827;
    background: #ffda72;
  }

  .still__link:hover {
    background: #facc15;
  }

  .still__link:focus-visible {
    outline: 3px solid #0ea5e9;
    outline-offset: 3px;
  }
</style>
