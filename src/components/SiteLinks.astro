---
interface LinkItem {
  href: string;
  label: string;
}

interface Props {
  linkClass?: string;
  separatorClass?: string;
  showSeparators?: boolean;
  items?: LinkItem[];
}

const defaultItems: LinkItem[] = [
  { href: "/archive", label: "Archive" },
  { href: "/imprint", label: "Imprint" },
  { href: "/privacy", label: "Privacy" },
];

const {
  linkClass = "",
  separatorClass = "",
  showSeparators = true,
  items = defaultItems,
} = Astro.props;
---

{
  items.map((item, idx) => (
    <>
      <a href={item.href} class={linkClass}>
        {item.label}
      </a>
      {showSeparators && idx < items.length - 1 && (
        <span class={separatorClass}>â€¢</span>
      )}
    </>
  ))
}
